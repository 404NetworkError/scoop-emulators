{
    "version": "2.0-13",
    "description": "Nintendo Wii U emulator",
    "homepage": "https://cemu.info/",
    "license": "Freeware",
    "suggest": {
        "cemuhook": "cemuhook",
        "Microsoft Visual C++ Runtime 2022": "extras/vcredist2022"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/cemu-project/Cemu/releases/download/v2.0-13/cemu-2.0-13-windows-x64.zip",
            "hash": "99f2bf98d350db01952456b6e1cd6b2078dba1d4bf4b8756a9df73f163d3c238"
        }
    },
    "extract_dir": "cemu_2.0-13",
    "pre_install": "if (!(Test-Path \"$persist_dir\\keys.txt\")) { New-Item \"$dir\\keys.txt\" -Type File | Out-Null }",
    "installer": {
        "script": [
            "'cemuhook.dll', 'keystone.dll' | ForEach-Object {",
            "   if (Test-Path \"$(versiondir 'cemuhook' 'current' $global)\\$_\") {",
            "       Copy-Item \"$(versiondir 'cemuhook' 'current' $global)\\$_\" \"$dir\"",
            "   }",
            "}",
            "if (!(Test-Path \"$persist_dir\\keys.txt\")) {",
            "    New-Item \"$dir\\keys.txt\" -Type File | Out-Null",
            "}"
        ]
    },
    "post_install": [
        "'settings.xml' | ForEach-Object {",
        "   if (Test-Path \"$persist_dir\\$_.bak\") {",
        "       Copy-Item \"$persist_dir\\$_.bak\" \"$dir\\$_\"  -Force",
        "   } else {",
        "       New-Item -ItemType File \"$dir\\$_\" | Out-Null",
        "   }",
        "}"
    ],
    "bin": "Cemu.exe",
    "shortcuts": [
        [
            "cemu.exe",
            "Cemu"
        ]
    ],
    "persist": [
        "controllerProfiles",
        "gameProfiles",
        "graphicPacks",
        "mlc01",
        "sharedFonts",
        "shaderCache\\transferable",
        "keys.txt"
    ],
    "uninstaller": {
        "script": [
            "'settings.xml' | ForEach-Object {",
            "   Copy-Item \"$dir\\$_\" \"$persist_dir\\$_.bak\" -Force",
            "}"
        ]
    },
    "checkver": {
        "url": "https://github.com/cemu-project/Cemu/tags",
        "regex": "tag/v([^\"]+)\""
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/cemu-project/Cemu/releases/download/v$version/cemu-$version-windows-x64.zip"
            }
        },
        "extract_dir": "cemu_$version"
    }
}
