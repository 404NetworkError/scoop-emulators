        "}"
    ],
    "persist": [
        "memstick",
        "assets",
        "demos"
    ],
    "checkver": {
        "url": "https://buildbot.orphis.net/ppsspp/index.php",
        "regex": "=v(?<version>[\\d.]+-[\\d]+)-g(?<commit>[a-f\\d]+)&[\\w;=]+-amd64"
    },
    "autoupdate": {
        "architecture": {
            "32bit": {
